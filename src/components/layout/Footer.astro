---
import { menuLinks, siteConfig } from "@/site-config";
const year = new Date().getFullYear();
---

<footer
	class='mt-auto w-full pb-4 pt-20 text-center font-semibold text-gray-600 dark:text-gray-400'
>
	<div class='container mx-auto px-4'>
		<div class='flex flex-col items-center justify-between gap-y-4 sm:flex-row sm:gap-y-0'>
			<div class='text-sm'>
				&copy; {siteConfig.author}
				{year}. ðŸš€
			</div>
			<nav
				aria-label='More on this site'
				class='flex flex-wrap justify-center gap-x-4 gap-y-2 text-sm sm:gap-x-0 sm:divide-x sm:divide-gray-500'
			>
				{
					menuLinks.map((link) => (
						<a class=' px-4 hover:text-textColor hover:underline' href={link.path}>
							{link.title}
						</a>
					))
				}
			</nav>
		</div>
	</div>
</footer>

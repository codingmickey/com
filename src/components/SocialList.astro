---
import { Icon } from "astro-icon/components";

/** 
	Uses https://www.astroicon.dev/getting-started/
	Find icons via guide: https://www.astroicon.dev/guides/customization/#open-source-icon-sets
	Only installed pack is: @iconify-json/mdi
*/
const socialLinks: {
	friendlyName: string;
	isWebmention?: boolean;
	link: string;
	name: string;
}[] = [
	{
		friendlyName: "Github",
		link: "https://github.com/codingmickey",
		name: "mdi:github"
	},
	{
		friendlyName: "Twitter",
		link: "https://twitter.com/codingmickey",
		name: "mdi:twitter"
	},
	{
		friendlyName: "LinkedIn",
		link: "https://www.linkedin.com/in/mickey-lacoste",
		name: "mdi:linkedin"
	},
	{
		friendlyName: "RSS",
		link: "/rss.xml",
		name: "mdi:rss"
	},
	{
		friendlyName: "Email",
		link: "mailto:hi@codingmickey.com",
		name: "mdi:email"
	},
	{
		friendlyName: "Twitch",
		link: "https://www.twitch.tv/codingmickey",
		name: "mdi:twitch"
	},
	{
		friendlyName: "Instagram",
		link: "https://www.instagram.com/codingmickey",
		name: "mdi:instagram"
	},
	{
		friendlyName: "YouTube",
		link: "https://www.youtube.com/@codingmickey",
		name: "mdi:youtube"
	},
	{
		friendlyName: "Buy me a coffee?",
		link: "https://www.buymeacoffee.com/codingmickey",
		name: "mdi:coffee"
	}
];
---

<div class='flex flex-wrap items-end items-center gap-x-2'>
	<p>Find me on</p>
	<ul class='flex flex-1 items-center gap-x-2 sm:flex-initial'>
		{
			socialLinks.map(({ friendlyName, isWebmention, link, name }) => (
				<li class='flex'>
					<a
						class='inline-block p-1 sm:hover:text-link'
						href={link}
						rel={`noopener noreferrer ${isWebmention ? "me authn" : ""}`}
						target='_blank'>
						<Icon aria-hidden='true' class='h-6 w-6' focusable='false' name={name} />
						<span class='sr-only'>{friendlyName}</span>
					</a>
				</li>
			))
		}
	</ul>
</div>
